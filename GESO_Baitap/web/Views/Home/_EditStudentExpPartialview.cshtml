@model web.Models.STUDENT_EXPERIENCE

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Thay đổi thông tin</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    @using (Html.BeginForm("Edit", "STUDENT_EXPERIENCE", null, FormMethod.Post, new { @sTUDENT_EXPERIENCE = Model }))
    {
        <div class="modal-body">

            @Html.AntiForgeryToken()

            <div class="form-horizontal container">
               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="form-group row justify-content-md-center">
                    @Html.Label("Tên công ty: ", htmlAttributes: new { @class = "control-label col-md-auto required" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.COMPANY_NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.COMPANY_NAME, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row justify-content-md-center">
                    @Html.Label("Chức danh: ", htmlAttributes: new { @class = "control-label col-md-auto required" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TITLE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TITLE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group  row justify-content-md-center">
                    @Html.Label("Từ", htmlAttributes: new { @class = "control-label col-md-auto required ", @style= "margin-right: 60px" })
                    <div class="col-md-10" style="font-size:large ">
                        @Html.DropDownListFor(model => model.FROM_MONTH, (IEnumerable<SelectListItem>)ViewBag.monthSelectList, "Tháng", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                        @Html.ValidationMessageFor(model => model.FROM_MONTH, "", new { @class = "text-danger" })

                        @Html.DropDownListFor(model => model.FROM_YEAR, (IEnumerable<SelectListItem>)ViewBag.yearSelectList, "Năm", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                        @Html.ValidationMessageFor(model => model.FROM_YEAR, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group  row justify-content-md-center">
                    @Html.Label("Đến ", htmlAttributes: new { @class = "control-label col-md-auto required", @style= "margin-right: 60px"  })
                    <div class="col-md-10" style="font-size:large">
                        @Html.DropDownListFor(model => model.TO_MONTH, (IEnumerable<SelectListItem>)ViewBag.monthSelectList, "Tháng", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                        @Html.ValidationMessageFor(model => model.TO_MONTH, "", new { @class = "text-danger" })

                        @Html.DropDownListFor(model => model.TO_YEAR, (IEnumerable<SelectListItem>)ViewBag.yearSelectList, "Năm", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                        @Html.ValidationMessageFor(model => model.TO_YEAR, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group  row justify-content-md-center">
                    @Html.Label("Mô tả công việc : ", htmlAttributes: new { @class = "control-label col-md-auto required" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DESCRIPTION_JOB, 8, 50, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DESCRIPTION_JOB, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row justify-content-md-center">
                    @Html.Label("Lương : ", htmlAttributes: new { @class = "control-label col-md-auto" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SALARY, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SALARY, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.STUDENT_FK);
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary" formmethod="post">Lưu thay đổi</button>
        </div>
    }
</div>
