@model web.Models.UserModel

<form>
    <fieldset>
        <legend style="font-size:200%;color:red;margin-bottom:20px; padding-top:50px"><b>Thông tin tài khoản</b> </legend>
        <div class="col-lg-3">
            <img src="@Model.student.AVATAR" style="width:220px;height:220px" class="col-lg-offset-5" />
        </div>
        <div class="col-lg-6 col-lg-offset-0">
            <dl class="dl-horizontal" style="font-size:medium; margin-top:30px">
                <dt>
                    @Html.DisplayName("Tên ")
                </dt>

                <dd style="color:blue">
                    <b>
                        @Html.DisplayFor(model => model.student.NAME)
                    </b>
                </dd>
                <dt>
                    @Html.DisplayName("Giới tính ")
                </dt>

                <dd style="color:blue">

                    @if (Model.student.GENDER == 1)
                    {
                        <b> Nam</b>
                    }
                    else
                    {
                        <b> Nữ</b>

                    }

                </dd>


                <dt>
                    @Html.DisplayName("Địa chỉ email :")
                </dt>

                <dd style="color:blue">
                    <b>
                        @Html.DisplayFor(model => model.student.EMAIL)
                    </b>
                </dd>

                <dt>
                    @Html.DisplayName("Số điện thoại")
                </dt>

                <dd style="color:blue">
                    <b>
                        @Html.DisplayFor(model => model.student.PHONE)
                    </b>
                </dd>

                <dt>
                    @Html.DisplayName("Lớp")
                </dt>

                <dd style="color:blue">
                    <b>
                        @Html.DisplayFor(model => model.student.CLASS_CODE)
                    </b>
                </dd>

                <dt>
                    @Html.DisplayName("Tên trường")
                </dt>

                <dd style="color:blue">
                    <b>
                        @Model.school.NAME
                    </b>
                </dd>

                <dt>
                    @Html.DisplayName("Chuyên ngành ")
                </dt>

                <dd style="color:blue">
                    <b>
                        @ViewBag.stu_fau
                    </b>
                </dd>

            </dl>

        </div>
    </fieldset>

    <div class="col-lg-1 col-lg-push-6" style="margin-top:10px">
        <input type="button" name="edit" value="Chỉnh sửa" class="btn btn-default" data-toggle="modal" data-target="#exampleModal" />
    </div>

</form>


<!-- Modal -->
<!-- Hotfix khi select2 ko chạy trên cái dropdown Ngành-->
<script>
    $(document).ready(function () {
        $('#student_FACULTIES_FK').select2();
    });
</script>

<!-- Script validate data  -->
<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
<script src="~/Scripts/Init.js" > </script>

@using (Html.BeginForm("Edit", "STUDENTs", null, FormMethod.Post, new { @UserModel = Model.student }))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content" id="edituserform">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông tin cá nhân</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.student.ID)

                    <div class="form-group">
                        @Html.Label("Tên :", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.NAME, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px",@name="name" } })
                            @Html.ValidationMessageFor(model => model.student.NAME, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Email :", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.EMAIL, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.EMAIL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Giới tính:", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.GENDER, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.GENDER, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("SĐT :", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.PHONE, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.PHONE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Mã lớp :", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.CLASS_CODE, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.CLASS_CODE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Trường : ", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8" style="margin-top:10px">
                            @Html.DropDownListFor(model => model.student.SCHOOL_FK, (IEnumerable<SelectListItem>)ViewBag.list_school, "", htmlAttributes: new { @class = "select2 col-lg-5", @style = "margin-top:10px" })
                            @Html.ValidationMessageFor(model => model.student.SCHOOL_FK, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        @Html.Label("HTĐT: ", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.CODE, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.CODE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Ngành : ", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8" style="margin-top:10px">
                            @Html.DropDownListFor(model => model.student.FACULTIES_FK, (IEnumerable<SelectListItem>)ViewBag.fau, "", htmlAttributes: new { @class = " col-lg-5", @style = "margin-top:10px" })
                            @Html.ValidationMessageFor(model => model.student.FACULTIES_FK, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Avata : ", htmlAttributes: new { @class = "control-label col-md-3", @style = "margin-top:10px" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.student.AVATAR, new { htmlAttributes = new { @class = "form-control", @style = "margin-top:10px" } })
                            @Html.ValidationMessageFor(model => model.student.AVATAR, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" formmethod="post">Save changes </button>
                </div>
            </div>
        </div>
    </div>
}