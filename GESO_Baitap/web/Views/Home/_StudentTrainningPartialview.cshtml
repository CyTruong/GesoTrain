@model web.Models.UserModel


<form action="UpdateStuTrain">

    <fieldset>
        <legend style="font-size:200%;color:red;margin-bottom:20px;margin-left:75px">
            <label style="margin-top:75px" class="legend_notrequired"> Trình độ & bằng cấp </label>
        </legend>
        @using (Html.BeginForm("UpdateStuTrain", "Home", null, FormMethod.Post, new { @UserModel = Model }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal col-lg-offset-2">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.school.ID)

            <div class="form-group">
                @Html.Label("Trình độ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 col-lg-push-1">
                    @Html.DropDownListFor(model => model.school.TYPEOFTRAINING_FK, (IEnumerable<SelectListItem>)ViewBag.trinhdo,"", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                    @Html.ValidationMessageFor(model => model.school.TYPEOFTRAINING_FK, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.Label("Đơn vị đào tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 col-lg-push-1">
                    @Html.EditorFor(model => model.school.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.school.NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Thời gian đào tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 col-lg-push-1">
                    Từ:
                    @Html.DropDownListFor(model => model.student.TRAINING_YEAR_FROM, (IEnumerable<SelectListItem>)ViewBag.yearSelectList, "", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                    @Html.ValidationMessageFor(model => model.student.TRAINING_YEAR_FROM, "", new { @class = "text-danger" })
                    Đến:
                    @Html.DropDownListFor(model => model.student.TRAINING_YEAR_TO, (IEnumerable<SelectListItem>)ViewBag.yearSelectList, "", htmlAttributes: new { style = "width: 100px;", @class = "select2" })
                    @Html.ValidationMessageFor(model => model.student.TRAINING_YEAR_TO, "", new { @class = "text-danger" })

                </div>
            </div>



            <div class="form-group">
                @Html.Label("Loại đào tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 col-lg-push-1">
                    @Html.EditorFor(model => model.school.CODE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.school.CODE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Chuyên ngành", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 col-lg-push-1">
                    @Html.DropDownListFor(model => model.student.FACULTIES_FK, (IEnumerable<SelectListItem>)ViewBag.fau, "", htmlAttributes: new {  @class = "select2 col-lg-5" , @id="fauselectintrain"})
                    @Html.ValidationMessageFor(model => model.student.FACULTIES_FK, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(m => m.student.ALTER_DATE)
            @Html.HiddenFor(m => m.student.ALTER_USER)
            @Html.HiddenFor(m => m.student.AVATAR)
            @Html.HiddenFor(m => m.student.CLASS_CODE)
            @Html.HiddenFor(m => m.student.CODE)
            @Html.HiddenFor(m => m.student.CREATE_DATE)
            @Html.HiddenFor(m => m.student.CREATE_USER)
            @Html.HiddenFor(m => m.student.EMAIL)
            @Html.HiddenFor(m => m.student.FACULTIES_FK)
            @Html.HiddenFor(m => m.student.ID)
            @Html.HiddenFor(m => m.student.NAME)
            @Html.HiddenFor(m => m.student.PHONE)
            @Html.HiddenFor(m => m.student.SCHOOL_FK)
            @Html.HiddenFor(m => m.student.STATUS_FK)
            @Html.HiddenFor(m => m.student.GENDER)
            @Html.HiddenFor(m => m.student.TRAINING_YEAR_FROM)
            @Html.HiddenFor(m => m.student.TRAINING_YEAR_TO)

                       
            @Html.HiddenFor(m => m.school.ADDRESS)
            @Html.HiddenFor(m => m.school.ALTER_DATE)
            @Html.HiddenFor(m => m.school.ALTER_USER)
            @Html.HiddenFor(m => m.school.CODE)
            @Html.HiddenFor(m => m.school.CREATE_DATE)
            @Html.HiddenFor(m => m.school.CREATE_USER)
            @Html.HiddenFor(m => m.school.DAY_ABSENT)
            @Html.HiddenFor(m => m.school.HOUR_ABSENT)
            @Html.HiddenFor(m => m.school.ID)
            @Html.HiddenFor(m => m.school.NAME)
            @Html.HiddenFor(m => m.school.STATUS_FK)
            @Html.HiddenFor(m => m.school.TYPEOFTRAINING_FK)


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary col-lg-offset-2 col-lg-3" formmethod="post" />
                </div>
            </div>
        </div>
        }
    </fieldset>


</form>